doSha1Test ()
{
	if [ -x /usr/bin/sha1sum ]; then
		echo ""
		echo "Sha'ing file '$0'."
		/usr/bin/sha1sum $0 > run.out
		SHA_1=`cat run.out | gawk '{print $1}'`
		sha -if $0 > run.out
		SHA_2=`cat run.out | grep -E "Hash" | gawk '{print $2}'`
		if [ "$SHA_1" != "$SHA_2" ]; then
			echo " ERROR: Computed hashes don't match."
			echo "        $SHA_1 != $SHA_2"
			dumpOutput
		else
			echo " INFO: Computing sha1 over file $0 successful and correct."
		fi
	else
		echo "sha1sum program not found."
	fi
}
